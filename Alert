def set_alert_period():
    now = datetime.datetime.now()
    min_hour = now.hour
    period = st.slider("DÃ©finir la pÃ©riode d'alerte", 
                        min_value=min_hour, max_value=24, value=(min_hour, min_hour+3),
                        help="Choisissez la pÃ©riode d'alerte en heures (min 0h, max 24h)")
    start_hour = period[0]
    end_hour = period[1]
    
    # Convertir les heures de dÃ©but et de fin en secondes depuis minuit
    start_seconds = start_hour * 3600
    end_seconds = end_hour * 3600

    return start_seconds, end_seconds


